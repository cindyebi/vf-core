<article class="vf-summary vf-summary--job">
  <p class="vf-summary__meta">
    <a href="{{ summary__department_href }}" class="vf-summary__link">{{summary__department}}</a>
     in
    <a href="{{ summary__location_href }}" class="vf-summary__link">{{ summary__location }}</a>
  </p>

  <h3 class="vf-summary__title">

    <a href="{{ summary__href }}" class="vf-summary__link">
      {{summary__title}}
    </a>

  </h3>

  <p class="vf-summary__text">
    {{summary__text}}
  </p>

  <a href="{{ summary__href }}" class="vf-summary__button | vf-button vf-button--primary vf-button--outline">Apply Now</a>

  <p class="vf-summary__date"><span>Closes {{summary__days_left}} days.</span> {{summary__date}}</p>

</article>
